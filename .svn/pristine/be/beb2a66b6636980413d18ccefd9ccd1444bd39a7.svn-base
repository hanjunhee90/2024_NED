/* 지도 컨테이너 스타일 */
#map {
    height: 800px; /* 지도 높이 */
    width: 70%; /* 지도 너비 */
    margin: 0 auto; /* 중앙 정렬 */
    border: 2px solid #ccc;
    border-radius: 10px;
}

/* 기본 타일 스타일 (흐림 효과) */
.leaflet-tile {
    filter: grayscale(30%) brightness(1.1) opacity(0.9); /* 흐리게, 밝기 조절, 투명도 높임 */
}

/* 범례 스타일 */
.legend {
    background: rgba(255, 255, 255, 0.9); /* 약간 투명한 흰색 배경 */
    padding: 10px;
    border-radius: 8px;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
    font-size: 14px;
}

/* 라벨 스타일 */
.label {
    font-size: 18px; /* 글씨 크기 */
    color: #333; /* 글씨 색상 */
    text-align: center; /* 텍스트 중앙 정렬 */
    padding: 5px 10px; /* 텍스트 여백 */
    border-radius: 5px;
}

/* GeoJSON Hover 애니메이션 추가 */
.leaflet-interactive {
    transition: all 0.3s ease-in-out; /* 부드러운 애니메이션 */
}

/* Hover 시 그림자 및 확대 효과 추가 */
.leaflet-hover {
    box-shadow: 0 0 30px rgba(0, 0, 0, 0.7); /* 그림자 효과 */
    transform: scale(1.02); /* 크기 확대 효과 (살짝 줄임) */
}